{
  "manifest_version": 3,
  "name": "Deployment Stack Navigator",
  "version": "1.0.1",
  "description": "Navigate software deployment stacks with quick links.",
  "commands": {
    "bookmark_resource": {
      "suggested_key": {
        "default": "Ctrl+Shift+9"
      },
      "description": "Bookmark Page",
      "global": true
    },
    "open_sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      },
      "description": "Open Sidebar",
      "global": true
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "permissions": [
    "fileSystem",
    "sidePanel",
    "scripting",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "bookmarks",
    "history"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index_bg.wasm",
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
